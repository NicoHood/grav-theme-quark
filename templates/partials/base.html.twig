{% set body_classes = body_class(['header-fixed', 'header-animated', 'header-dark', 'header-transparent', 'sticky-footer']) %}
{% set grid_size = theme_var('grid-size') %}
{% set compress = theme_var('production-mode') ? '.min.css' : '.css' %}
{% set show_breadcrumbs = show_breadcrumbs|defined(theme_var('show_breadcrumbs', false)) %}
{% use 'blocks/base.html.twig' %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: grav.config.site.default_lang }}">
<head>
{% block head deferred %}
    <meta charset="utf-8" />
    {% set page_title = page_title|default(page.title ~ (page.title and theme_var('append_site_title', true) ? ' | ' ~ site.title)) %}
    <title>{{ page_title|default(site.title) }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    {% if config.plugins.sitemap.enabled %}
      <link rel="sitemap" type="application/xml" title="Sitemap" href="{{ config.plugins.sitemap.route ends with '.xml' ? config.plugins.sitemap.route : config.plugins.sitemap.route ~ '.xml' }}">
    {% endif %}

    <link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />
{% endblock head %}

{% block stylesheets %}
    {% do assets.addCss('theme://css-compiled/spectre'~compress, {group:'theme'}) %}
    {% if theme_var('spectre.exp') %}{% do assets.addCss('theme://css-compiled/spectre-exp'~compress, {group:'theme'}) %}{% endif %}
    {% if theme_var('spectre.icons') %}{% do assets.addCss('theme://css-compiled/spectre-icons'~compress, {group:'theme'}) %}{% endif %}
    {% do assets.addCss('theme://css-compiled/theme'~compress, {group:'theme'}) %}
    {% do assets.addCss('theme://css/custom.css', {group:'theme'}) %}

    {# Add lineawesome 1.3.0 and font-awesome-line-awesome compatibility patches along with v4 shims #}
    {% if theme_var('line-awesome', false) %}{% do assets.addCss('theme://css-compiled/line-awesome'~compress, {group:'theme'}) %}{% endif %}
    {% if theme_var('font-awesome', true) %}{% do assets.addCss('theme://css-compiled/font-awesome-line-awesome'~compress, {group:'theme'}) %}{% endif %}
    {% if theme_var('font-awesome-shims', true) %}
      {% do assets.addCss('theme://css/fontawesome/v4-shims'~compress, {group:'theme'}) %}
      {% do assets.addCss('theme://css-compiled/font-awesome-line-awesome-shims'~compress, {group:'theme'}) %}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {% do assets.addJs('jquery', 101) %}
    {% do assets.addJs('theme://js/jquery.treemenu.js', {group:'bottom'}) %}
    {% do assets.addJs('theme://js/site.js', {group:'bottom'}) %}
{% endblock %}

{% block assets deferred %}
    {{ assets.css('theme')|raw }}
    {{ assets.css()|raw }}
    {{ assets.js()|raw }}

    {# Preload webfonts #}
    <link rel="preload" href="{{ url('theme://fonts/la-solid-900.woff2') }}" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="{{ url('theme://fonts/la-regular-400.woff2') }}" as="font" type="font/woff2" crossorigin>
{% endblock %}

{# Internet explorer warning #}
{% if grav.browser.browser == 'msie' and theme_var('internet_explorer_deprecated', false) %}
    <style type="text/css">
        #ie-deprecated-checkbox {
            visibility: hidden;
        }
        #ie-deprecated-warning {
            position: fixed;
            top: 0;
            width: 100%;
            height: 4rem;
            z-index: 10000;
            margin: 0;

            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-right: 30px;
        }
        #ie-deprecated-checkbox:checked + #ie-deprecated-warning {
            visibility: hidden;
        }
    </style>
{% endif %}

</head>
<body id="top" class="{% block body_classes %}{{ body_classes }}{% endblock %}">

    {# Internet explorer warning #}
    {% if grav.browser.browser == 'msie' and theme_var('internet_explorer_deprecated', false) %}
        <input type="checkbox" id="ie-deprecated-checkbox">
        <div class="notices red" id="ie-deprecated-warning">
            <span>{{ "THEME_QUARK.INTERNET_EXPLORER_NOT_SUPPORTED"|t(site.title)|raw }}</span>
            <label for="ie-deprecated-checkbox"><i class="fas fa-window-close fa-2x"></i></label>
        </div>
    {% endif %}

    <div id="page-wrapper">
    {% block header %}
        <div id="header" class="section">
            <div class="container {{ grid_size }}">
                <div class="navbar">
                    <header class="navbar-section logo" role="banner">
                        {% include 'partials/logo.html.twig' %}
                    </header>
                    <nav class="navbar-section desktop-menu" role="navigation" aria-label="Main Navigation">

                        <div class="dropmenu animated">
                        {% block header_navigation %}
                            {% include 'partials/navigation.html.twig' %}
                        {% endblock %}
                        </div>

                        {% if config.plugins.login.enabled and grav.user.username %}
                            <span class="login-status-wrapper"><i class="fas fa-user"></i> {% include 'partials/login-status.html.twig' %}</span>
                        {% endif %}

                    </nav>
                </div>
            </div>
        </div>
        <div class="mobile-menu">
            <div class="button_container" id="toggle">
                <span class="top"></span>
                <span class="middle"></span>
                <span class="bottom"></span>
            </div>
        </div>
    {% endblock %}

    {% block hero %}{% endblock %}

        <div id="start">
        {% block body %}
            <div id="body-wrapper" class="section">
                <div class="container {{ grid_size }}">
                    {% block messages %}
                        {% include 'partials/messages.html.twig' ignore missing %}
                    {% endblock %}

                    {% block breadcrumbs %}
                        {% if show_breadcrumbs and config.plugins.breadcrumbs.enabled %}
                            {% include 'partials/breadcrumbs.html.twig' %}
                        {% endif %}
                    {% endblock %}

                    {{ block('content_surround') }}
                </div>
            </div>
        {% endblock %}
        </div>

    </div>

    {% block footer %}
        {% include 'partials/footer.html.twig' %}
    {% endblock %}

    {% block mobile %}
    <div class="mobile-container">
        <div class="overlay" id="overlay">
            <div class="mobile-logo">
                {% include 'partials/logo.html.twig' with {mobile: true} %}
            </div>
            <nav class="overlay-menu">
                {% include 'partials/navigation.html.twig' with {tree: true} %}
            </nav>
        </div>
    </div>
    {% endblock %}

{% block bottom %}
    {{ assets.js('bottom')|raw }}
{% endblock %}

</body>
</html>
